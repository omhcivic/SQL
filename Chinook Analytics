#Which customers (full names, customer ID, and country) are not in the US? Organize in descending order by country.

SELECT 
FIrstname,
Lastname,
CustomerID,
Country
FROM customers
WHERE Country <> 'USA'
ORDER BY Country DESC

#Which Customers are from Brazil?

SELECT 
Firstname, 
Lastname,
CustomerID,
Country
FROM customers
WHERE Country = 'Brazil'

#Which employees are Sales Agents?

SELECT 
Lastname,
Firstname
FROM employees
WHERE Title='Sales Support Agent'

#How many invoices were billed to countries other than USA?

SELECT COUNT(InvoiceID)
FROM invoices
WHERE BillingCountry <> 'USA'

